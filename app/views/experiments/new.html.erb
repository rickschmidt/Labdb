<h1>New experiment</h1>

<% form_for(@experiment) do |f| %>
  <%= f.error_messages %>
<h3>Premix</h3>
	<table border="0" cellspacing="5" cellpadding="5">
		<tr>
			<td>
				<%= f.label "Date:" %>
    			<%= f.date_select :date %>
			</td>
			<td>
				<%= f.label :experiment_number %><br/>
		    	<%= f.text_field :experiment_number, :size=>20 %>
			</td>
		</tr>
   
		<tr>
			<td> 
				<%= f.label "Anneal Temp:" %><br/>
			    <%= f.text_field :anneal %>
			</td>
			<td> 
				<%= f.label "DNA Amount:" %><br/>
		    	<%= f.text_field :dna_amount %>
			</td>
		</tr>
	
		<tr>
			<td>
				<%= f.label :total_samples %><br/>
		    	<%= f.text_field :total_samples %>
			</td>
			<td> 
				<%= f.label :bsa %><br/>
			    <%= f.text_field :bsa %>
			</td>
		</tr>
		
		<tr>
			<td>
				<%= f.label :buffer %><br/>
				<%= f.text_field :buffer %>
			</td>
			<td>
				<%= f.label :mgcl2 %><br/>
			    <%= f.text_field :mgcl2 %>
			</td>
		</tr>
		
		<tr>
			<td>
				<%= f.label :taq %><br/>
			    <%= f.text_field :taq %>
			</td>
			<td>
				<%= f.label :h2o %><br/>
			    <%= f.text_field :h2o %>
			</td>
		</tr>

		<tr>
			<td>
			   <%= f.label :dntps %><br/>
			    <%= f.text_field :dntps %>
			</td>
			<td>
			    <%= f.label :dna %><br/>
			    <%= f.text_field :dna %>
			</td>
		</tr>

		<tr>
			<td>
				 <%= f.label :total %><br/>
			    <%= f.text_field :total %>
			</td>
			<td>
				
			</td>
		</tr>


	</table>

	<%= select('gene','primer',Primer.all.collect {|p| [ p.id, p.id] }, {:prompt => 'Select Primer'})%> Select a Primer by its ID in the <%= link_to "Primers", primers_path %> table.


			
<div class="preview">
	<div id="primersinfo">
					
	<table  width="500px">
		<th width="105px">Primer </th>
		<th align="left">Sequence</th>
		<th align="right">Amount</th>
	
		<tr>
			<td>
				Primer H:
			</td>
			<td>
				<div class='primerh'/>
			</td>
			<td align="right">
				<%= f.text_field :primerh_amount, :size=>"10px" %>
			</td>
		</tr>
		
		<tr>
			<td>
				Primer L: 
			</td>
			<td>	
				<div class='primerl'/>
			</td>
			<td align="right">
				<%= f.text_field :primerl_amount, :size=>"10px" %>
			</td>
		</tr>
	</table>
	<table border="0" cellspacing="5" cellpadding="5">
		<tr>
			<td>
				<%= f.label :notes %><br/>
			    <%= f.text_area :notes , :size=>"80x10"%>
			</td>
		</tr>
	</table>

 

    <%= f.submit 'Create' %>

<% end %>

<%= link_to 'Back', experiments_path %>