<div class="projects_index">
<h1>Projects</h1>
<%= button_to 'Create', new_project_path,{:method=>:get,:class=>"button_create"} %>

	<table>
		<tr id="header_row">
	    	<th >Project Name</th>
			<th >Date</th>
						<th >Date</th>
									<th >Date</th>
												<th >Date</th>	
		</tr>
	
	<%@projects.each do |pro| %>
	<tr class="<%= cycle("even", "odd") %>">
	    <td><%=h pro.project_name %></td>
	    <td><%=h pro.date %></td>
		    <td><%=h pro.date %></td>
			    <td><%=h pro.date %></td>
				    <td><%=h pro.date %></td>
	    <td class="icons" id="show"><%= link_to image_tag("show.png", :border=>0), pro%></td>
	 	<td class="icons"><%= link_to image_tag("edit.png", :border=>0), edit_project_path(pro)%></td>
	 	<td class="icons"><%= link_to image_tag("delete.png", :border=>0), pro, :confirm => 'Are you sure?', :method => :delete %></td>

	  </tr>
	<% end %>
	</table>
	<%= will_paginate @projects %> 
	Per Page: <%= select_tag :per_page, options_for_select([10,20,50,100,200], params[:per_page].to_i),
	               :onchange => "if(this.value){window.location='?per_page='+this.value;}" %>
</div>