<h1>DNA Samples</h1>
<div class="index_information">
<table style="position:relative;margin-left:500px">
	<tr>
		<th>Accession </th>
		<th>Extraction</th>
	</tr>
	<% @recent.each do |r| %>
	<tr>
		<td><%= r.dna_accession %></td>
		<td><%= r.dnasample_number %></td>
	</tr>
	<%end%>
</table>

<%= button_to 'Create', new_dnasample_path,{:method=>:get,:class=>"button_create"} %>

</div>
<div class="dnasamples_index">
<table >
  <tr id="header_row">
    <th >DNA Accession</th>
    <th >Sample Number</th>
    <th >Date</th>
    <th >Method</th>

  </tr>   


<% @dnasamples.each do |dnasample| %>
  <tr class="<%= cycle("even", "odd") %>">
    <td><%=h dnasample.dna_accession %></td>
    <td><%=h dnasample.dnasample_number %></td>
    <td><%=h dnasample.date %></td>
    <td><%=h dnasample.method %></td>

    <td class="icons" id="show"><%= link_to image_tag("show.png", :border=>0), dnasample%></td>
 	<td class="icons"><%= link_to image_tag("edit.png", :border=>0), edit_dnasample_path(dnasample)%></td>


  </tr>
<% end %>
</table>
</div>
<%= will_paginate @dnasamples %> 
Per Page: <%= select_tag :per_page, options_for_select([10,20,50,100,200], params[:per_page].to_i),
               :onchange => "if(this.value){window.location='?per_page='+this.value;}" %>
<br />

