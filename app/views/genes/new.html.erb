<h1>New gene</h1>

<% form_for(@gene) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :genbank %><br />
    <%= f.text_field :genbank %>
  </p>
  <p>
    <%= f.label :locus %><br />
    <%= f.text_field :locus %>
  </p>
  <p>
    <%= f.label :primerl %><br />
    <%= f.text_field :primerl %>
  </p>
  <p>
    <%= f.label :primerh %><br />
    <%= f.text_field :primerh %>
  </p>
<p>
	
	<%= select('gene','primerh',Primer.all.collect {|p| [ p.id, p.primerh] }, {:prompt => 'Select Primer'})%>
<%@primers.each do |primer| %>
<p><%= primer.primerh %></p>
<%end %>
</p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', genes_path %>