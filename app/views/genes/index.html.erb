<div class="genes_index">
<h1>Genes</h1>
<%= button_to 'Create', new_gene_path,{:method=>:get,:class=>"button_create"} %>
<table >
  <tr id="header_row">
    <th class="custom">Genbank</th>
    <th class="custom">Locus</th>
    <th class="custom">Primerl</th>
    <th class="custom">Primerh</th>
  </tr>

<% @genes.each do |gene| %>
<tr class="<%= cycle("even", "odd") %>">
    <td><%=h gene.genbank %></td>
    <td><%=h gene.locus %></td>
    <td><%=h gene.primerl %></td>
    <td><%=h gene.primerh %></td>
	<td class="icons" id="show"><%= link_to image_tag("show.png", :border=>0), gene%></td>
 	<td class="icons"><%= link_to image_tag("edit.png", :border=>0), edit_gene_path(gene)%></td>


  </tr>
<% end %>
</table>

<br />

</div>